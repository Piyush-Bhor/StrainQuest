<%- include('includes/header.ejs') %>

<div class="container">
  <br><h1> Strain Quest </h1> <br>
  <div class="row"> 
    <% for(var i = 0; i < strains.length; i++) { %>
      <div class="col-sm col-md-4">
        <div class="card mx-auto" style="width: 18rem;">
          <img class="card-img-top" src="<%= strains[i].strain_image %>" alt="Card image cap">
          <div class="card-body">
            <div style="text-align: center;"> 
              <h5 class="card-title"><%= strains[i].strain_name %></h5> 
            </div>
            <input type="hidden" name="strain_name" value="<%= strains[i].strain_name %>">
            <p>
              <ul class="list-group">
                <li class="list-group-item">Type: <p name="strain_type"><%= strains[i].strain_type %></p></li>
                <li class="list-group-item">THC: <p name="thc"><%= strains[i].strain_thc %></p></li>
                <li class="list-group-item">CBD: <p name="cbd"><%= strains[i].strain_cbd %></p></li>
                <li class="list-group-item">Effects: <p name="effects"><%= strains[i].strain_effects %></p></li>
              </ul>
            </p>
          </div>
        </div>
      </div>
      <% if((i + 1) % 3 === 0) { %>
        </div>
        <div class="row">
      <% } %>
    <% } %>
  </div>
  <br>
</div>
<%- include('includes/footer.ejs') %>
